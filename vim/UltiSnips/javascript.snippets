snippet newt "Create a new failing Tape test" b
test('${1}', function(t) {
  t.fail();
  t.end();
});
endsnippet

snippet fend "Create an end function for tape tests" b
function end(t) {
  if (!t) { throw new Error('You forgot to pass tape'); }
  t.end();
  reset();
}
endsnippet

